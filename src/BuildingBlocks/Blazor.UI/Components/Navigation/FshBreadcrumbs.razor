<MudBreadcrumbs Items="@ItemsList" MaxItems="@((byte?)MaxItems)" />

@code {
    [Parameter] public IEnumerable<BreadcrumbItem> Items { get; set; } = Array.Empty<BreadcrumbItem>();
    [Parameter] public int MaxItems { get; set; } = 4;

    private IReadOnlyList<BreadcrumbItem> ItemsList => Items?.ToList() ?? new List<BreadcrumbItem>();
}
